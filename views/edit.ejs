<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Note</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <%- include('partials/header', { page: 'edit', user: user }) %>
  <div class="note-editor-wrapper">
    <h1>Edit Note</h1>
    <form id="noteForm" action="/notes/<%= note._id %>?_method=PUT" method="POST" class="note-form-container">
      <!-- Title input -->
      <div class="note-title-group">
        <label>Title</label>
        <input 
          type="text" 
          name="title" 
          required
          value="<%= note.title %>"
        >
      </div>

      <!-- Quill editor -->
      <%- include('partials/content', { userInput: { content: note.content } }) %>

      <!-- Submit buttons -->
      <div class="note-button-group">
        <button type="submit" class="btn-primary-custom">Save Changes</button>
        <a href="/notes" class="btn-secondary-custom">Cancel</a>
      </div>

      <!-- Error message -->
      <% if (error) { %>
        <div class="alert-error">
          <%= error %>
        </div>
      <% } %>
    </form>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>

  <script>
  window.addEventListener('DOMContentLoaded', () => {
    const editorDiv = document.getElementById('editor');

    const quill = new Quill('#editor', {
      theme: 'snow',
      placeholder: 'Write your note here...',
      modules: {
        toolbar: [
          [{ header: [1, 2, 3, false] }],
          ['bold', 'italic', 'underline'],
          [{ list: 'ordered' }, { list: 'bullet' }, { list: 'check' }],
          ['code-block'],
          ['clean']
        ]
      }
    });

    // Load contentDelta if exists, otherwise fallback to HTML
    const delta = <%- JSON.stringify(note.contentDelta || { ops: [] }) %>;
    if (delta.ops.length > 0) {
      quill.setContents(delta);
    } else {
      quill.root.innerHTML = editorDiv.dataset.content || '';
    }

    // Submit handler
    const form = document.getElementById('noteForm');
    form.addEventListener('submit', function(e) {
      // Save both HTML and Delta
      const contentInput = document.getElementById('content');
      contentInput.value = quill.root.innerHTML;

      const deltaInput = document.getElementById('contentDelta');
      deltaInput.value = JSON.stringify(quill.getContents());

      if (quill.getText().trim().length === 0) {
        e.preventDefault();
        alert('Content cannot be empty');
        return;
      }
    });
  });
  </script>

</body>
</html>
