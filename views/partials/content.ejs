<div class="note-content-group">
  <label>Content</label>
  <!-- Quill editor -->
  <div id="editor" data-content="<%- userInput ? userInput.content : '' %>"></div>

  <!-- Hidden input that will actually be submitted -->
  <input type="hidden" name="content" id="content" required>

  <!-- Hidden input for Delta -->
  <input type="hidden" name="contentDelta" id="contentDelta">
</div>
