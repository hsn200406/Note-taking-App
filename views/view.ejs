<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Note</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>

  <%- include('partials/header', { page: 'notes', user: user }) %>

  <div class="view-note-wrapper">
    <h1><%= note.title %></h1>

    <!-- Editor container -->
    <div id="editor"></div>

    <div class="back-button-container">
      <a href="/notes" class="btn-secondary-custom">Back</a>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>

  <script>
    window.addEventListener('DOMContentLoaded', () => {
      const quill = new Quill('#editor', {
        theme: 'snow',
        readOnly: true,
        modules: {
          toolbar: false
        }
      });

      // Load Delta first (best), fallback to HTML
      const delta = <%- JSON.stringify(note.contentDelta || null) %>;

      if (delta && delta.ops && delta.ops.length > 0) {
        quill.setContents(delta);
      } else {
        quill.root.innerHTML = <%- JSON.stringify(note.content || '') %>;
      }
    });
  </script>

</body>
</html>
