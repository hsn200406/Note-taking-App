<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Note</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <!-- Quill CSS -->
  <link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css" rel="stylesheet">

  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <%- include('partials/header', { page: 'add', user: user }) %>
  <div class="note-editor-wrapper">
    <h1>Create Note</h1>
    <form id="noteForm" action="/notes" method="POST" class="note-form-container">
      <!-- Title input -->
      <div class="note-title-group">
        <label>Title</label>
        <input
          type="text"
          name="title"
          required
          value="<%= userInput ? userInput.title : '' %>"
        >
      </div>

      <!-- Quill editor -->
      <%- include('partials/content', { userInput: userInput }) %>

      <!-- Submit buttons -->
      <div class="note-button-group">
        <button type="submit" class="btn-primary-custom">Create Note</button>
        <a href="/notes" class="btn-secondary-custom">Cancel</a>
      </div>

      <!-- Error message -->
      <% if (error) { %>
        <div class="alert-error">
          <%= error %>
        </div>
      <% } %>
    </form>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>
  <script>
  window.addEventListener('DOMContentLoaded', () => {
    const editorDiv = document.getElementById('editor');
    const previousContent = editorDiv.dataset.content || '';

    const quill = new Quill('#editor', {
      theme: 'snow',
      placeholder: 'Write your note here...',
      modules: {
        toolbar: [
          [{ header: [1, 2, 3, false] }],
          ['bold', 'italic', 'underline'],
          [{ list: 'ordered' }, { list: 'bullet' }, { list: 'check' }],
          ['code-block'],
          ['clean']
        ]
      }
    });

    // Preload content if editing
    quill.root.innerHTML = previousContent;

    // Submit handler
    const form = document.getElementById('noteForm');
    form.addEventListener('submit', function(e) {
      const htmlInput = document.getElementById('content');
      const deltaInput = document.getElementById('contentDelta');

      htmlInput.value = quill.root.innerHTML;          // keeps HTML (for display)
      deltaInput.value = JSON.stringify(quill.getContents()); // keeps Delta (for full fidelity)

      if (quill.getText().trim().length === 0) {
        e.preventDefault();
        alert('Content cannot be empty');
        return;
      }
    });

  });
  </script>
</body>
</html>
